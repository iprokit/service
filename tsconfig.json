{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2023",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",

    /* Strict Type-Checking Options */
    // "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}